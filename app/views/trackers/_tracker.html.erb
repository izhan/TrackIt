<div class="col-lg-3 col-md-6 hero-feature">
      <div class="thumbnail-wrapper" style="background-image:url('<%= tracker.product.thumbnail || "http://upload.wikimedia.org/wikipedia/commons/0/0f/Cat-eo4jhx8y-100503-500-408_reasonably_small.jpg" %>');">
        <div class="caption">
            <h3><%=tracker.name %></h3>
            <div class ="media-price">
              <span class="<%= price_class(tracker) %>">Current: $<%= to_dollars(tracker.product.current_price) %></span>
            </div>
            <div class="media-price">
             <span>Original: $<%= to_dollars(tracker.original_price) %></span>
            </div>
            <p><a> <%= link_to "remove", tracker, data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default"%> </a><a><%= link_to "purchase", "http://"+tracker.product.url, :target=> "_blank", class: "btn btn-default"%></a>
            </p>
        </div>
    </div>
</div>

