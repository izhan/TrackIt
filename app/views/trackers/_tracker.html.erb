<li>
  <div class="media">
    <div class="thumbnail-wrapper pull-left" style="background-image:url('<%= tracker.product.thumbnail || "http://upload.wikimedia.org/wikipedia/commons/0/0f/Cat-eo4jhx8y-100503-500-408_reasonably_small.jpg" %>');"></div>
    <div class="media-body">
      <h4 class="media-wrapper-heading media-heading"><%=tracker.name %></h4>
      <div class ="media-price">
        <span class="<%= price_class(tracker) %>">Current: $<%= to_dollars(tracker.product.current_price) %></span>
      </div>
      <div class="media-price">
       <span>Original: $<%= to_dollars(tracker.original_price) %></span>
      </div>
      <div class="media-buttons">
        <%= link_to "purchase", "http://"+tracker.product.url, :target=> "_blank", class: "btn btn-outline-default btn-outline-primary btn-outline-inverted center" %>
        <%= link_to "remove", tracker, data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-default btn-outline-red btn-outline-inverted center" %>  
      </div>
    </div>
  </div>
</li>
