<div class="col-lg-3 col-md-6 hero-feature">
    <div class="thumbnail">
      <%= image_tag "#{tracker.product.thumbnail || 'http://upload.wikimedia.org/wikipedia/commons/0/0f/Cat-eo4jhx8y-100503-500-408_reasonably_small.jpg'}", class: "thumbnail-image" %>
        <div class="caption">
            <div class = "media-wrapper-heading media-heading"><%=tracker.name %></div>
            <div class ="media-price">
              <span class="<%= price_class(tracker) %>">Current: $<%= to_dollars(tracker.product.current_price) %></span>
            </div>
            <div class="media-price">
             <span>Original: $<%= to_dollars(tracker.original_price) %></span>
            </div>
            <br>
            <p><a><%= link_to "purchase", "http://"+tracker.product.url, :target=> "_blank", class: "btn btn-default"%></a><a> <%= link_to "remove", tracker, data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default"%> </a>
            </p>
        </div>
    </div>
</div>

