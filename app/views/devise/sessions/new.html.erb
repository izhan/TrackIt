<div class="full-page-form col-md-offset-4 col-md-4">
  <h1 class="form-header">Sign In</h1>
  <div class="form">
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
      <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "Email" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", hide_label: true %>
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, label: "Remember me" %>
      <% end -%>
      <%= f.submit "Sign in", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="form-footer">
    Or <%= render "devise/shared/links" %>
  </div>
</div>
