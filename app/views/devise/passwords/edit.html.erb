<div class="full-page-form col-md-offset-4 col-md-4">
  <h1 class="form-header">Change your password</h1>
  <div class="form">
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New Password", hide_label: true %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm new password", hide_label: true %>
      <%= f.submit "Change my password", class: "btn btn-danger btn-block" %>
    <% end %>
  </div>
  <div class="form-footer">
    Or <%= render "devise/shared/links" %>
  </div>
</div>
