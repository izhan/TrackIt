<div class="jumbotron hero-spacer">
    <h1>Welcome back!</h1>
    <p style="text-align:center">Paste the URL of the product you want to track below and we'll notify you when it goes on sale.</p>
    <h2 class="form-header">Product URL:</h2>
      <%= bootstrap_form_for(@tracker) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.text_field :url, autofocus: true, hide_label: true %>
        <div class="form-submit">
          <%= f.submit "start tracking", class: "btn btn-outline-primary btn-outline-inverted center" %>
        </div>
      <% end %>
</div>
<hr>
<div class="row">
    <div class="col-lg-12">
        <h3>Your Tracked Items 
          <%= text_field_tag "search", nil, id: "search-tracker" %>
         <%= submit_tag "search", :name => nil, id: "search-trackers" %> </h3><br>
    </div>
</div>

<div id="tracker-results">
  <input class="search" placeholder="Search" />
  <button class="sort" data-sort="product-name">
    Sort by name
  </button>
  <button class="sort" data-sort="price-orig">
    Sort by original price
  </button>
  <button class="sort" data-sort="price-current">
    Sort by current price
  </button>
  <ul class="list trackers">
    <% if @tracker_list.any? %>
        <%= render @tracker_list %>
    <% end %>
  </ul>
</div>
