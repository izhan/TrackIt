<%= bootstrap_form_for(@tracker) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.text_field :url, autofocus: true, label: "URL" %>
  <%= f.submit "Add Tracker" %>
<% end %>
<% if @tracker_list.any? %>
  <ul class="trackers">
    <% # should be smart enough to automatically render the correct template --> _tracker.html.erb %>
    <%= render @tracker_list %>
  </ul>
  <%= will_paginate @tracker_list %>
<% end %>