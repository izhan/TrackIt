<h1>Create new product tracker</h1>
<div class="row">
  <div class="dashboard-form col-md-8 col-md-offset-2">
    <h2 class="form-header">Paste product URL:</h2>
    <%= bootstrap_form_for(@tracker) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.text_field :url, autofocus: true, hide_label: true %>
      <div class="form-submit">
        <%= f.submit "start tracking", class: "btn btn-outline-default btn-outline-inverted center" %>
      </div>
    <% end %>
  </div>
</div>
<h1>Your currently tracked products: </h1>
<%= form_tag trackers_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<div class="dashboard-results">
  <% if @tracker_list.any? %>
    <ul class="trackers">
      <% # should be smart enough to automatically render the correct template --> _tracker.html.erb %>
      <%= render @tracker_list %>
    </ul>
    <%= will_paginate @tracker_list %>
  <% end %>
</div>